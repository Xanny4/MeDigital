<%- include('./components/header')%>

    <body>
        <%- include('./components/navigation')%>
            <form id="edit_product" method="post" action="/functions/edit_product/<%=product.id%>">
                <label class="form-label">Product Name</label>
                <input type="text" name="productName" class="form-control" value="<%=product.productName%>">
                <label class=" form-label">Product Image Url</label>
                <input type="text" name="productMainImage" class="form-control" value="<%=product.productMainImage%>">
                <label class=" form-label">Product Price</label>
                <input type="text" name="productPrice" class="form-control" value="<%=product.productPrice%>">
                <label class=" form-label">Product Description</label>
                <input type="text" name="productDescription" class="form-control"
                    value="<%=product.productDescription%>">
                <label class=" form-label">Available</label><br>
                <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                    <input type="radio" class="btn-check" name="isAvailable" value="true" id="btnradio1"
                        autocomplete="off" <%if(product.isAvailable){%>checked<%}%>>
                        <label class="btn btn-outline-primary" for="btnradio1">True</label>

                        <input type="radio" class="btn-check" name="isAvailable" value="false" id="btnradio2"
                            autocomplete="off" <%if(!product.isAvailable){%>checked<%}%>>
                            <label class="btn btn-outline-primary" for="btnradio2">False</label>
                </div><br>
                <label class="form-label">Units in stock</label>
                <input type="text" name="unitInStock" class="form-control" value="<%=product.unitInStock %>">
                <select class="form-select" name="categoryId" aria-label="Default select example">
                    <%for(let category of categories){%>
                        <%if(product.categoryId==category.id ){%>
                            <option selected value="<%=category.id%>">
                                <%=category.categoryName%>
                            </option>
                            <%}else{%>
                                <option value="<%=category.id%>">
                                    <%=category.categoryName%>
                                </option>
                                <%}%>
                                    <%}%>
                </select>
                <button type="submit" form="edit_product" class="btn btn-primary"
                    style="width:100%; margin-top:12px;">Save Changes</button>
            </form>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
                crossorigin="anonymous"></script>
    </body>

    </html>