<%- include('./components/header')%>
<body >
    <%- include('./components/navigation')%>


    <div class="container" style="margin-top: 30px;">
        <div class="row">

            <div class="col-lg-3">
                <h3>Add Category</h3>
                <form id="add_category_form" method="post" action="/functions/add_category">
                    <label class="form-label">Category Name</label>
                    <input type="text" name="categoryName" class="form-control">

                    <label class="form-label">Category Image</label>
                    <input type="text" name="categoryMainImage" class="form-control">
                        <button form="add_category_form" type="submit" class="btn btn-primary" style="width:100%; margin-top:12px;">Create New Category</button>
                    
                </form>

            </div>
            <div class="col-lg-9">
                <%if(categories.length>0){%>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Category image</th>
                                <th>Category name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%for(let category of categories){%>
                                <tr>
                                    <td class="align-middle"><h5><%=category.id%></h5></td>
                                    <td ><img src="<%=category.categoryMainImage%>" style="width:50px; height:auto;"/></td>
                                    <td class="align-middle"><h5><%=category.categoryName%></h5></td>
                                    <td class="align-middle"><a class="btn btn-info" style="margin-bottom:10px;" href="/products/<%=category.id%>">Products</a>
                                    <form method="post" action="/functions/delete_category/<%=category.id%>"><button type="submit" class="btn btn-danger">Delete</button></form></td>
                                </tr>
                            <%}%>
                        </tbody>

                    </table>
                <% } else {%>
                    <p>no data for you</p>
                <%}%>
                 

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>