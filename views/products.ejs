<%- include('./components/header')%>

    <body>
        <%- include('./components/navigation')%>

            <form id="update_form" method="post" action="/functions/edit_category/<%=category.id%>">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-2">
                            <label class="form-label">Category Name</label>
                            <input type="text" name="categoryName" value="<%=category.categoryName%>"
                                class="form-control">
                        </div>
                        <div class="col-lg-4">
                            <label class="form-label">Category Image url</label>
                            <input type="text" name="categoryMainImage" value="<%=category.categoryMainImage%>"
                                class="form-control">
                        </div>
                        <div class="col-lg-2">
                            <button style="margin-top:30px" form="update_form" type="submit"
                                class="btn btn-primary">Update</button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="container" style="margin-top: 30px;">
                <div class="row">
                    <div class="col-lg-3">
                        <h3>Add Product</h3>
                        <form id="add_product" method="post" action="/functions/add_product/<%=category.id%>">
                            <label class="form-label">Product Name</label>
                            <input type="text" name="productName" class="form-control">
                            <label class="form-label">Product Image Url</label>
                            <input type="text" name="productMainImage" class="form-control">
                            <label class="form-label">Product Price</label>
                            <input type="text" name="productPrice" class="form-control">
                            <label class="form-label">Product Description</label>
                            <input type="text" name="productDescription" class="form-control">
                            <label class="form-label">Available</label><br>
                            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                                <input type="radio" class="btn-check" name="isAvailable" value="true" id="btnradio1"
                                    autocomplete="off" checked>
                                <label class="btn btn-outline-primary" for="btnradio1">True</label>

                                <input type="radio" class="btn-check" name="isAvailable" value="false" id="btnradio2"
                                    autocomplete="off">
                                <label class="btn btn-outline-primary" for="btnradio2">False</label>
                            </div><br>
                            <label class="form-label">Units in stock</label>
                            <input type="text" name="unitInStock" class="form-control">
                            <button type="submit" form="add_product" class="btn btn-primary"
                                style="width:100%; margin-top:12px;">Create new product</button>
                        </form>
                    </div>
                    <div class="col-lg-9">
                        <%if(products.length>0){%>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Product ID</th>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Description</th>
                                        <th>Available</th>
                                        <th>Units in stock</th>
                                        <th>Category ID</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%for(let product of products){%>
                                        <tr>
                                            <td class="align-middle">
                                                <h6>
                                                    <%=product.id%>
                                                </h6>
                                            </td>
                                            <td><img src="<%=product.productMainImage%>" style="width:100px;" /></td>
                                            <td class="align-middle">
                                                <h6>
                                                    <%=product.productName%>
                                                </h6>
                                            </td>
                                            <td class="align-middle">
                                                <h6>
                                                    <%= product.productPrice %>
                                                </h6>
                                            </td>
                                            <td class="align-middle">
                                                <h6>
                                                    <%= product.productDescription %>
                                                </h6>
                                            </td>
                                            <td class="align-middle">
                                                <h6>
                                                    <%= product.isAvailable %>
                                                </h6>
                                            </td>
                                            <td class="align-middle">
                                                <h6>
                                                    <%= product.unitInStock %>
                                                </h6>
                                            </td>
                                            <td class="align-middle">
                                                <h6>
                                                    <%= product.categoryId %>
                                                </h6>
                                            </td>
                                            <td class="align-middle">
                                                <form method="post"
                                                    action="/functions/delete_product/<%=category.id%>/<%=product.id%>">
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                </form>
                                            <td class="align-middle"><a class="btn btn-info" style="margin-bottom:10px;"
                                                    href="/product/<%=product.id%>">Edit Product</a>
                                            </td>

                                        </tr>
                                        <%}%>
                                </tbody>

                            </table>
                            <% } else {%>
                                <p>no data for you</p>
                                <%}%>


                    </div>
                </div>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
                    crossorigin="anonymous"></script>
    </body>

    </html>